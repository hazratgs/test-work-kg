@import url('https://fonts.googleapis.com/css?family=PT+Serif&subset=cyrillic');
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,900');

:root {
    --width: 1200px;

    /* fonts */
    --title: 'Roboto', 'Arial';
    --text: 'Arial', 'Georgia';

    /* colors */
    --border-color: rgba(215, 215, 215, 1); 
    --border-color-light: rgba(240, 240, 240, 1);
    --red: rgba(218, 51, 48, 1);
    --yellow: rgba(235, 196, 66, 1);
    --blue: rgba(49, 134, 226, 1);
    --purple: rgba(116, 45, 245, 1);

    --font-smooth: {
        font-smoothing: antialiased;
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
    };

    --transition: {
        transition: all 0.3s ease;
    };
}
